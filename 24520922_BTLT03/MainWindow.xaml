<Window x:Class="_24520922_BTLT03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_24520922_BTLT03"
        mc:Ignorable="d"
        Title=":3" Height="450" Width="800"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Width="110" Background="Azure">
            
            <ComboBox x:Name="shape" SelectionChanged="shape_SelectionChanged">
                <ComboBoxItem Content="Line" IsSelected="True"/>
                <ComboBoxItem Content="Rectangle"/>
                <ComboBoxItem Content="Ellipse"/>
            </ComboBox>

            <Separator Margin="10"/>
            <CheckBox x:Name="fill" Content="Fill" HorizontalAlignment="Center" Margin="5"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5,0">
                <Label Content="Color"/>
                <ComboBox x:Name="color" Width="60">
                    <ComboBoxItem Content="Black" IsSelected="True"/>
                    <ComboBoxItem Content="White"/>
                    <ComboBoxItem Content="Red"/>
                    <ComboBoxItem Content="Green"/>
                    <ComboBoxItem Content="Blue"/>
                    <ComboBoxItem Content="Yellow"/>
                    <ComboBoxItem Content="Pink"/>
                </ComboBox>
            </StackPanel>


            <Separator Margin="10"/>
            <Label Content="Chọn điểm" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5,0">
                <Label Content="PT1"/>
                <TextBox x:Name="x1" Width="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="100"/>
                <TextBox x:Name="y1" Width="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="100"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5,0">
                <Label Content="PT2"/>
                <TextBox x:Name="x2" Width="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="0"/>
                <TextBox x:Name="y2" Width="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="0"/>
            </StackPanel>

            <Separator Margin="10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5,0">
                <Label Content="Chiều rộng"/>
                <TextBox x:Name="w" Width="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="100"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5,0">
                <Label Content="Chiều cao"/>
                <TextBox x:Name="h" Width="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="100"/>
            </StackPanel>

            <Separator Margin="10"/>
            <Button Content="Draw" Margin="5" Click="Draw_Click"/>
            <Button Content="Clear" Margin="5" Click="Clear_Click"/>

        </StackPanel>
        <Canvas x:Name="PaintArea" Grid.Column="1" Background="White">
            <Canvas.Clip>
                <RectangleGeometry Rect="30,30,600,350"/>
            </Canvas.Clip>
        </Canvas>
        <Label Grid.Column="1" Content="Clipping down here :3"/>
        <Label Grid.Column="1" Content="Clipping up here :3" Margin="0,380,0,0"/>
    </Grid>
</Window>
