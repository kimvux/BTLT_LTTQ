<Window x:Class="btvn2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:btvn2"
        mc:Ignorable="d"
        Title="Dot" Height="800" Width="800"
        ResizeMode="NoResize">
    <Canvas x:Name="Area">
        <TextBlock>
            <Run Text="WASD to move Dot"/>
            <LineBreak/>
            <Run Text="Left click to place Dot"/>
            <LineBreak/>
            <Run Text="Dot goes home every 5s"/>
        </TextBlock>
        <Label Content="Dot's home" Canvas.Left="180" Canvas.Top="200"/>
        <Ellipse x:Name="Dot" Fill="Red" Width="50" Height="50" Canvas.Left="255" Canvas.Top="215"/>
        <Ellipse Stroke="Black" Width="80" Height="80" Canvas.Left="240" Canvas.Top="200"/>
    </Canvas>
</Window>
