<Window x:Class="_24520922_BTLT05.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_24520922_BTLT05"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ComboBox Name="selections" Grid.Row="0" Width="100" SelectionChanged="selections_SelectionChanged">
            <ComboBoxItem Content="None" IsSelected="True"/>
            <ComboBoxItem Content="Rotate"/>
            <ComboBoxItem Content="Flip"/>
            <ComboBoxItem Content="Scale"/>
            <ComboBoxItem Content="Translation"/>
        </ComboBox>
        <Rectangle Grid.Row="2" x:Name="rect" Width="200" Height="80" Canvas.Left="300" Canvas.Top="170" Stroke="Black">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="SkyBlue" Offset="0.0"/>
                    <GradientStop Color="LightGreen" Offset="1.0"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
    </Grid>
</Window>
